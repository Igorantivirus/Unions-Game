/* Карточка игры */
.game {
    width: auto;

    background-color: rgb(230, 245, 255);
    border: 2dp black;
    border-radius: 10dp;

    padding: 10dp;
    margin-bottom: 10dp;
}

/* Верхняя строка: название + кнопка */
.game-label {
    width: 100%;
    display: flex;
    align-items: center;

    margin-bottom: 10dp;
}

.game-name {
    flex: 2 1 0;
    font-size: 26dp;
    font-weight: bold;
    color: black;
}

.choose-b {
    flex: 1 1 0;
    height: 44dp;

    font-size: 18dp;
    font-weight: bold;

    color: white;
    background-color: rgb(0, 120, 60);

    border: 2dp black;
    border-radius: 10dp;

    display: flex;
    justify-content: center;
    align-items: center;
    text-align: center;
}

.choose-b:active {
    background-color: orange;
}

/* Нижняя строка: 3 колонки статистики */
.game-statistic {
    width: 100%;
    display: flex;
}

.stat-label {
    flex: 1 1 0;
    display: flex;
    flex-direction: column;

    text-align: center;
    font-size: 16dp;

    color: black;
    background-color: rgb(236, 236, 236);

    border: 1dp black;
    border-radius: 8dp;

    padding: 8dp;
    margin: 0px 6dp;
}

.stat-label p:last-child {
    margin-top: auto;
}