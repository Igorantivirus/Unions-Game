<template name="pause-overlay" content="slot">
    <!--
    It is necessary to connect:

    "overlays/menu-buttons.rcss"
    "overlays/overlay.rcss"

    This is done so that styles are not duplicated when connecting two overlays.
    -->
    <head></head>

    <body>
        <div id="pause-overlay" class="overlay">
            <div class="panel">
                <h2 class="overlay-title">Пауза</h2>
                <p class="overlay-subtitle">Продолжить?</p>

                <div class="overlay-divider"></div>

                <button id="btn-resume" class="menu-btn primary"><span>Вернуться в игру</span></button>
                <button id="btn-restart" class="menu-btn"><span>Начать заново</span></button>
                <button id="btn-exit" class="menu-btn danger"><span>Выйти в меню</span></button>
            </div>
        </div>
    </body>

</template>